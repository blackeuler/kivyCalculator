<CalculatorButton@Button>:
    font_size:16
<CalculatorGrid>:
    id: calculator
    display: entry
    rows: 5
    padding:10
    spacing:10

    BoxLayout:
        TextInput:
            id:entry
            font_size:32
            multiline:False
    BoxLayout:
        CalculatorButton:
            text:"1"
            on_press: entry.text += self.text
        CalculatorButton:
            text:"2"
            on_press: entry.text += self.text
        CalculatorButton:
            text:"3"
            on_press: entry.text += self.text
        CalculatorButton:
            text:"+"
            on_press: entry.text += self.text
    BoxLayout:
        CalculatorButton:
            text:"4"
            on_press: entry.text += self.text
        CalculatorButton:
            text:"5"
            on_press: entry.text += self.text
        CalculatorButton:
            text:"6"
            on_press: entry.text += self.text
        CalculatorButton:
            text:"-"
            on_press: entry.text += self.text
    BoxLayout:
        CalculatorButton:
            text:"7"
            on_press: entry.text += self.text
        CalculatorButton:
            text:"8"
            on_press: entry.text += self.text
        CalculatorButton:
            text:"9"
            on_press: entry.text += self.text
        CalculatorButton:
            text:"*"
            on_press: entry.text += self.text
    BoxLayout:
        CalculatorButton:
            text:"Clear"
            on_press: entry.text = ''
        CalculatorButton:
            text:"0"
            on_press: entry.text += self.text
        CalculatorButton:
            text:"="
            on_press: calculator.calculate(entry.text)
        CalculatorButton:
            text:"/"
    
    